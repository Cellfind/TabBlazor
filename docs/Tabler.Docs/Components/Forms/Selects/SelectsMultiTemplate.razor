<ItemSelect Items="customers" @ref="multiSelect" MaxListHeight="100px" RemoveSelectedFromList>

    <ListTemplate>
        @context.CustomerName
    </ListTemplate>

    <SelectedTemplate>
        @if (context == null || !context.Any())
        {
            <Button>Select Customers...</Button>
        }
        else
        {
            <Button>
                Customers
                <Badge class="ms-2" BackgroundColor="TablerColor.Red">@context.Count</Badge>
                <span @onclick="@(e => multiSelect.ClearSelected())" @onclick:stopPropagation>
                    <Icon class="ms-2 icon" Elements="@DemoIcons.Trash" />
                </span>
            </Button>
        }

    </SelectedTemplate>

    <FooterTemplate>
        <div class="dropdown-divider"></div>

        <div class="d-flex justify-content-center">
            <Button Size="ButtonSize.Small">
                <Icon class="icon me-1" Elements="@DemoIcons.Plus" />New customer
            </Button>
        </div>
       
    </FooterTemplate>

</ItemSelect>

@code {
    List<Customer> customers = Data.SampleData.GetCustomers();
    ItemSelect<Customer> multiSelect;

}
