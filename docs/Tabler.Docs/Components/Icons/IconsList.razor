<h3>@icons.Count Tabler Icons</h3>
<a href="https://github.com/tabler/tabler-icons">tabler-icons</a>

<div class="row mb-3">
    <div class="col-sm-12 col-md-6 col-lg-3">
        <div class="form-group">
            <label>Size</label>
            <input class="form-control" type="number" min="1" @bind-value="@size" />
        </div>
    </div>
    <div class="col-sm-12 col-md-6 col-lg-3">
        <div class="form-group">
            <label>Stroke width</label>
            <input class="form-control" type="number" min="0.1" step="0.1" @bind-value="@strokeWidth" />
        </div>
    </div>
    <div class="col-sm-12 col-md-3 col-lg-2">
        <div class="form-group">
            <label>Color</label>
            <input class="form-control form-control-color" type="color" @bind="@color" @bind:event="oninput" />
        </div>
    </div>
    <div class="col-sm-12 col-md-6 col-lg-3">
        <div class="form-group">
            <label>Search</label>
            <input class="form-control" type="text" value="@searchText" @oninput="SearchIcons" />
        </div>
    </div>
</div>

<div class="row mb-3">
    <div class="col-auto">
        @if (selectedIcons.Any())
        {
            <span>@selectedIcons.Count icons selected</span>
            <Button class="ms-1" Size="ButtonSize.Small" OnClick="CopyToClipboard">Copy to clipboard</Button>
        }
    </div>
</div>

<div class="row iconlist-container">
    @foreach (var icon in filteredIcons)
    {
        <div class="col-auto mb-3" title="@icon.Name">
            <div class="iconlist-item text-center cursor-pointer @(IsSelected(icon) ? "iconlist-item-selected": "")" @onclick="@(() => SelectIcon(icon))">
                <Icon Size="@size" Elements="@icon.Elements" StrokeWidth="strokeWidth" Color="@color" />
                <div><small>@icon.Name</small></div>
            </div>
        </div>
    }
</div>
