@typeparam TItem
@inherits DashboardComponentBase<TItem>
@namespace TabBlazor.Dashboard

@if (facet != null)
{

    @if (@ChildContent == null)
    {

        @facet.Name

        @foreach (var facetFilter in facet.Filters)
        {
            <Checkbox Label="@($"{facetFilter.Filter.Name} ({facetFilter.CountAll})")" Value=@facetFilter.Active ValueChanged="@(e => ValueChanged(facetFilter, e))" Switch />
        }

        <h2> @DataFactory.FilteredItems?.Count()</h2>
    }
    else
    {
        @ChildContent?.Invoke(facet)
    }
}




