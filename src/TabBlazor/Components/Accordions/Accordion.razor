@namespace TabBlazor
@inherits TablerBaseComponent

<CascadingValue Value="@this" Name="Accordion">
    <div class="accordion">
        @foreach (var item in Items)
        {
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button @(item.Expanded ? "" : "collapsed")" @onclick="@(() => SetExpanded(item))">
                        @item.Title
                    </button>
                </h2>
                <div class="accordion-collapse collapse @(item.Expanded ? "show" : "")">
                    <div class="accordion-body pt-0">
                        @item.ChildContent
                    </div>
                </div>
            </div>
        }
    </div>
    @ChildContent
</CascadingValue>